{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Users",
  "type": "array",
  "users": {
    "title": "User",
    "type": "object",
    "properties": {
      "id": {
        "description": "The unique identifier for a user from mongoDb",
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "city": {
        "type": "string"
      },
      "birthDate": {
        "type": "string",
        "format": "date"
      },
      "posts": {
        "type": "array",
        "name": "post",
        "properties": {
          "message": {"type": "string"},
          "date": {"type": "string", "format": "date"},
          "height": {"type": "number"}
        }
      }
    },
    "required": ["id", "name", "city", "birthDate"]
  }
}